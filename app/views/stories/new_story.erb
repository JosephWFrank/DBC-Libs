<div class="container-fluid" id="dbc-font-two">

<h1>Write a New DBC Story</h1>
  <% if @errors %>
    <% @errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
<br>
  <div class="row">
    <div class="col-sm-4">

<div class="container">
  <form class="form-horizontal" action='/stories' method='POST'>


 <div class="form-group">
      <label class="labelss control-label col-sm-2" for="title">Title:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Title" name="story[title]">
      </div>
    </div>

<div class="form-group">
      <label class="control-label col-sm-2" for="word_1">Beverage:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Beverage" name="story[word_1]">
      </div>
    </div>

<div class="form-group">
      <label class="control-label col-sm-2" for="word_2">Noun:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Noun" name="story[word_2]">
      </div>
    </div>

  <div class="form-group">
      <label class="control-label col-sm-2" for="word_3">Sound:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Sound" name="story[word_3]">
      </div>
    </div>

 <div class="form-group">
      <label class="control-label col-sm-2" for="word_4">Nouns(plural):</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Nouns" name="story[word_4]">
      </div>
    </div>

  <div class="form-group">
      <label class="control-label col-sm-2" for="word_5">Color:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Color" name="story[word_5]">
      </div>
    </div>

<div class="form-group">
      <label class="control-label col-sm-2" for="word_6">Language:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Language" name="story[word_6]">
      </div>
    </div>
 <div class="form-group">
      <label class="control-label col-sm-2" for="word_7">Student Name #1:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Student Name #1" name="story[word_7]">
      </div>
    </div>
   <div class="form-group">
      <label class="control-label col-sm-2" for="word_8">Student Name #2:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Student Name #2" name="story[word_8]">
      </div>
    </div>
 <div class="form-group">
      <label class="control-label col-sm-2" for="word_9">Nouns:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Nouns(plural)" name="story[word_9]">
      </div>
    </div>

     <div class="form-group">
      <label class="control-label col-sm-2" for="word_10">Student Name #3:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Student Name #3" name="story[word_10]">
      </div>
    </div>
 <div class="form-group">
      <label class="control-label col-sm-2" for="word_11">Number:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Number" name="story[word_11]">
      </div>
    </div>

  <input type="hidden" name="story[user_id]" value=<%=session[:id]%>>
  <input type="hidden" name="story[story_id]" value=1>
<div class="form-group">
      <div class="control-label col-sm-2">
        <button type="submit" class="btn btn-warning">Create!</button>
      </div>
    </div>
  </form>

</div>









